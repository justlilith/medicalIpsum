{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM","ESNext"],
    "preserveConstEnums": true,
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "$lib": ["./app/lib"],
      "$lib/*": ["./app/lib/*"]
    }
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}